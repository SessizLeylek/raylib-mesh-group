{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "/I${workspaceFolder}\\include",
                "/I${workspaceFolder}\\src",
                "${file}",
                "/link",
                "/MACHINE:X64",
                "${workspaceFolder}\\lib\\raylib.lib\"",
                "opengl32.lib",
                "kernel32.lib",
                "shell32.lib",
                "user32.lib",
                "gdi32.lib",
                "winmm.lib",
                "msvcrt.lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}